# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page



# Users

GET     /vote/                          controllers.Application.newUser()
POST    /vote/adduser                   controllers.Application.addUser()
GET     /vote/allusers                  controllers.Application.allUsers()
GET     /vote/aboutuser/:id              controllers.Application.aboutUsers(id:Long)


# Stand

GET     /                                controllers.Application.index()
# GET     /ip                              controllers.Application.ip()
POST    /addStand                        controllers.Application.addStand()




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
